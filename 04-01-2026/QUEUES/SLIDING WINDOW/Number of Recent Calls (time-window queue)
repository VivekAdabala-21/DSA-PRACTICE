class RecentCounter {

   // Queue to store ping times
    Queue<Integer> q;

    public RecentCounter() {
        q = new LinkedList<>();
    }
    
    public int ping(int t) {

        // Add current ping time
        q.add(t);

        // Remove pings older than (t - 3000)
        while (q.peek() < t - 3000) {
            q.poll();
        }

        // Number of recent calls
        return q.size();
    }    
}
