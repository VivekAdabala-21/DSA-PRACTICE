class Solution {
    public int maxSubArray(int[] nums) {
        int n=nums.length;
        int maxSum= Integer.MIN_VALUE;
        //Using Kadane's Algorithm
        int currSum=0;
        for(int i=0;i<n;i++)
        {
            currSum +=nums[i];
            maxSum= Math.max(currSum,maxSum);
            if(currSum<0)  // IF CURRENT SUM IS NEGATIVE MAKE CURRENT SUM AS ZERO
            {
                currSum=0;
            }
        }
          return maxSum;

    }
}
