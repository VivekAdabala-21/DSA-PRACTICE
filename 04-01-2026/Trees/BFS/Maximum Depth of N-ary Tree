class Solution {
    public int maxDepth(Node root) {
        if (root == null) return 0;

        Queue<Node> queue = new LinkedList<>();
        queue.add(root);
        int depth = 0;

        while (!queue.isEmpty()) {
            int size = queue.size();
            depth++;

            for (int i = 0; i < size; i++) {
                Node curr = queue.poll();
                for (Node child : curr.children) {
                    queue.add(child);
                }
            }
        }
        return depth;
    }
}
